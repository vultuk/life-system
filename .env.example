# Database (Railway auto-injects from Postgres plugin)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Authentication
JWT_SECRET=your-secret-here-minimum-32-characters

# Port (Railway auto-injects this)
PORT=3000

# Service URLs (for Gateway to call internal services)
# Railway internal URLs use the format: http://<service-name>.railway.internal
TASKS_SERVICE_URL=http://tasks.railway.internal
CONTACTS_SERVICE_URL=http://contacts.railway.internal
NOTES_SERVICE_URL=http://notes.railway.internal
HABITS_SERVICE_URL=http://habits.railway.internal

# MCP Server (for Claude Desktop or other MCP clients)
GATEWAY_URL=https://your-gateway-url.railway.app
MCP_USER_TOKEN=your-jwt-token-here
